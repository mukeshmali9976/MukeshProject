<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mukeshproject.ui.activities.ProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:padding="@dimen/margin_15">

        <Button
            android:id="@+id/btnProfileLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edittext"
            android:padding="@dimen/margin_15"
            android:text="Login to Eazylo"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btnProfileRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:background="@drawable/rounded_border_edittext"
            android:lines="1"
            android:padding="@dimen/margin_15"
            android:text="Create a New Account"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorBlack"
            android:text="General"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/tvinvite"
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:padding="@dimen/margin_10"
            android:drawableLeft="@drawable/ic_person_invite"
            android:drawablePadding="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorBlack"
            android:text="Invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator"
            android:background="#E0E0E0" />

        <TextView
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:padding="@dimen/margin_10"
            android:drawableLeft="@drawable/ic_notifications"
            android:drawablePadding="@dimen/margin_5"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorBlack"
            android:text="Notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator"
            android:background="#E0E0E0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorBlack"
            android:text="Need Help ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator"
            android:background="#E0E0E0" />

        <TextView
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:padding="@dimen/margin_10"
            android:drawableLeft="@drawable/ic_help_support"
            android:drawablePadding="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/font_16"
            android:textColor="@color/colorBlack"
            android:text="Help and Support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/seperator"
            android:background="#E0E0E0" />

    </LinearLayout>

</LinearLayout>
